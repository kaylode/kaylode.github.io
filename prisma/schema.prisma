// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String
  content     String
  author      String
  publishedAt DateTime
  updatedAt   DateTime @updatedAt
  category    String
  tags        String[]
  readTime    Int
  featured    Boolean  @default(false)
  image       String?
  status      String   @default("published")
  views       Int      @default(0)
  createdAt   DateTime @default(now())
  
  // File attachments
  blogPostFiles BlogPostFile[]

  @@map("blog_posts")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  technologies String[]
  githubUrl   String?
  liveUrl     String?
  image       String?
  featured    Boolean  @default(false)
  stars       Int      @default(0)
  forks       Int      @default(0)
  language    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // File attachments (PDFs, additional images, etc.)
  projectFiles ProjectFile[]

  @@map("projects")
}

model Publication {
  id          String   @id @default(cuid())
  title       String
  authors     String[]
  venue       String
  year        Int
  doi         String?
  arxivId     String?
  pdfUrl      String?
  category    String
  abstract    String?
  citations   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("publications")
}

model LeetCodeStats {
  id                    String   @id @default(cuid())
  username              String   @unique
  totalSolved           Int      @default(0)
  easySolved            Int      @default(0)
  mediumSolved          Int      @default(0)
  hardSolved            Int      @default(0)
  acceptanceRate        Float    @default(0.0)
  ranking               Int?
  contributionPoints    Int      @default(0)
  recentSubmissions     Json?
  skillStats            Json?
  contestRating         Int?
  contestParticipation  Int      @default(0)
  lastUpdated           DateTime @default(now())
  createdAt             DateTime @default(now())

  @@map("leetcode_stats")
}

model GitHubStats {
  id              String   @id @default(cuid())
  username        String   @unique
  publicRepos     Int      @default(0)
  followers       Int      @default(0)
  following       Int      @default(0)
  totalStars      Int      @default(0)
  totalForks      Int      @default(0)
  totalCommits    Int      @default(0)
  contributionsLastYear Int @default(0)
  languages       Json?
  topRepositories Json?
  lastUpdated     DateTime @default(now())
  createdAt       DateTime @default(now())

  @@map("github_stats")
}

model Analytics {
  id          String   @id @default(cuid())
  page        String
  views       Int      @default(1)
  uniqueViews Int      @default(1)
  visitors    Json?
  date        DateTime @default(now())
  
  @@unique([page, date])
  @@map("analytics")
}

model FileStorage {
  id          String   @id @default(cuid())
  filename    String
  originalName String
  mimeType    String
  size        Int      // File size in bytes
  path        String   // Storage path/URL
  category    String   // e.g., "pdf", "image", "document"
  description String?
  isPublic    Boolean  @default(true)
  uploadedBy  String?  // User who uploaded (future feature)
  downloadCount Int    @default(0)
  
  // Metadata for different file types
  metadata    Json?    // Store file-specific metadata
  
  // Relationships
  blogPostFiles BlogPostFile[]
  projectFiles  ProjectFile[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("file_storage")
}

model BlogPostFile {
  id         String     @id @default(cuid())
  blogPostId String
  fileId     String
  blogPost   BlogPost   @relation(fields: [blogPostId], references: [id], onDelete: Cascade)
  file       FileStorage @relation(fields: [fileId], references: [id], onDelete: Cascade)
  
  @@unique([blogPostId, fileId])
  @@map("blog_post_files")
}

model ProjectFile {
  id        String     @id @default(cuid())
  projectId String
  fileId    String
  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  file      FileStorage @relation(fields: [fileId], references: [id], onDelete: Cascade)
  
  @@unique([projectId, fileId])
  @@map("project_files")
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String
  status    String   @default("unread") // "unread", "read", "replied"
  isSpam    Boolean  @default(false)
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}

model Education {
  id           String   @id @default(cuid())
  institution  String
  location     String
  degree       String
  field        String
  period       String
  status       String   // "Ongoing", "Graduated", "Completed"
  gpa          String?
  description  String?
  highlights   String[] // Array of achievement highlights
  logo         String?  // URL to institution logo
  type         String   // "phd", "master", "bachelor", "certificate"
  startDate    DateTime?
  endDate      DateTime?
  isVisible    Boolean  @default(true)
  order        Int      @default(0) // For custom ordering
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("education")
}

model Experience {
  id               String   @id @default(cuid())
  company          String
  position         String
  location         String?
  period           String
  type             String   // "professional", "research", "internship", "volunteer"
  description      String?
  responsibilities String[] // Array of key responsibilities
  achievements     String[] // Array of achievements
  technologies     String[] // Technologies used
  logo             String?  // URL to company logo
  website          String?  // Company website
  startDate        DateTime?
  endDate          DateTime?
  isCurrent        Boolean  @default(false)
  isVisible        Boolean  @default(true)
  order            Int      @default(0) // For custom ordering
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("experiences")
}

model Technology {
  id          String   @id @default(cuid())
  name        String   @unique
  category    String   // "frontend", "backend", "database", "tools", "languages"
  icon        String?  // URL to technology icon/logo
  description String?
  proficiency String   @default("intermediate") // "beginner", "intermediate", "advanced", "expert"
  yearStarted Int?     // Year when started using this technology
  isVisible   Boolean  @default(true)
  order       Int      @default(0) // For custom ordering in UI
  color       String?  // Hex color for UI theming
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("technologies")
}

model Achievement {
  id          String   @id @default(cuid())
  category    String   // "academic", "competition", "scholarship", "recognition", "hackathon"
  title       String   // "Outstanding GPA", "1st Place - AI4VN Hackathon 2020", etc.
  description String   // Detailed description of the achievement
  year        String   // Year or period when achieved (e.g., "2020", "2020-2021")
  type        String   // "academic", "competition", "hackathon", "scholarship", "recognition"
  organization String? // Organization that awarded (e.g., "MediaEval", "AI4VN", "Panasonic")
  rank        String?  // Rank or position (e.g., "1st Place", "Runner-up", "Top 15")
  value       String?  // Additional value like GPA, scholarship amount, etc.
  url         String?  // URL to achievement details, certificate, or announcement
  image       String?  // URL to certificate image or logo
  isVisible   Boolean  @default(true)
  order       Int      @default(0) // For custom ordering in UI
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("achievements")
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  role          String    @default("user") // "user", "admin"
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts Account[]
  sessions Session[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
