// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String
  content     String
  author      String
  publishedAt DateTime
  updatedAt   DateTime @updatedAt
  category    String
  tags        String[]
  readTime    Int
  featured    Boolean  @default(false)
  image       String?
  status      String   @default("published")
  views       Int      @default(0)
  createdAt   DateTime @default(now())
  
  // File attachments
  blogPostFiles BlogPostFile[]

  @@map("blog_posts")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  technologies String[]
  githubUrl   String?
  liveUrl     String?
  image       String?
  featured    Boolean  @default(false)
  stars       Int      @default(0)
  forks       Int      @default(0)
  language    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // File attachments (PDFs, additional images, etc.)
  projectFiles ProjectFile[]

  @@map("projects")
}

model Publication {
  id          String   @id @default(cuid())
  title       String
  authors     String[]
  venue       String
  year        Int
  doi         String?
  arxivId     String?
  pdfUrl      String?
  category    String
  abstract    String?
  citations   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("publications")
}

model LeetCodeStats {
  id                    String   @id @default(cuid())
  username              String   @unique
  totalSolved           Int      @default(0)
  easySolved            Int      @default(0)
  mediumSolved          Int      @default(0)
  hardSolved            Int      @default(0)
  acceptanceRate        Float    @default(0.0)
  ranking               Int?
  contributionPoints    Int      @default(0)
  recentSubmissions     Json?
  skillStats            Json?
  contestRating         Int?
  contestParticipation  Int      @default(0)
  lastUpdated           DateTime @default(now())
  createdAt             DateTime @default(now())

  @@map("leetcode_stats")
}

model GitHubStats {
  id              String   @id @default(cuid())
  username        String   @unique
  publicRepos     Int      @default(0)
  followers       Int      @default(0)
  following       Int      @default(0)
  totalStars      Int      @default(0)
  totalForks      Int      @default(0)
  totalCommits    Int      @default(0)
  contributionsLastYear Int @default(0)
  languages       Json?
  topRepositories Json?
  lastUpdated     DateTime @default(now())
  createdAt       DateTime @default(now())

  @@map("github_stats")
}

model Analytics {
  id          String   @id @default(cuid())
  page        String
  views       Int      @default(1)
  uniqueViews Int      @default(1)
  visitors    Json?
  date        DateTime @default(now())
  
  @@unique([page, date])
  @@map("analytics")
}

model FileStorage {
  id          String   @id @default(cuid())
  filename    String
  originalName String
  mimeType    String
  size        Int      // File size in bytes
  path        String   // Storage path/URL
  category    String   // e.g., "pdf", "image", "document"
  description String?
  isPublic    Boolean  @default(true)
  uploadedBy  String?  // User who uploaded (future feature)
  downloadCount Int    @default(0)
  
  // Metadata for different file types
  metadata    Json?    // Store file-specific metadata
  
  // Relationships
  blogPostFiles BlogPostFile[]
  projectFiles  ProjectFile[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("file_storage")
}

model BlogPostFile {
  id         String     @id @default(cuid())
  blogPostId String
  fileId     String
  blogPost   BlogPost   @relation(fields: [blogPostId], references: [id], onDelete: Cascade)
  file       FileStorage @relation(fields: [fileId], references: [id], onDelete: Cascade)
  
  @@unique([blogPostId, fileId])
  @@map("blog_post_files")
}

model ProjectFile {
  id        String     @id @default(cuid())
  projectId String
  fileId    String
  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  file      FileStorage @relation(fields: [fileId], references: [id], onDelete: Cascade)
  
  @@unique([projectId, fileId])
  @@map("project_files")
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String
  status    String   @default("unread") // "unread", "read", "replied"
  isSpam    Boolean  @default(false)
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}
